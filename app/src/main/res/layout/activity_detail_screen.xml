<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_470sdp"
    android:padding="@dimen/_5sdp"
    android:layout_gravity="center"
    android:clickable="true"
    android:id="@+id/root_view">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_close"
                android:layout_alignParentRight="true"
                android:clickable="true" />

            <ImageView
                android:id="@+id/detail_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_placeholder_image"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_35sdp"/>

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_thumbnail"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="M18 FUELâ„¢ 7.6L Compact Air Compressor"
                android:textColor="@color/album_title"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_name"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Price: $227.00"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_15sdp" />

            <WebView
                android:id="@+id/web_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_price"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>